}

.meal {
  background-color: #F1F5F5;
  margin-top: 30rpx;
  border-radius: 15px;
  width: 90%;
  padding-bottom: 1rpx;
  font-weight: bold;
}

.meal:nth-child(1) {
  margin-top: 0;
}

.meal-name {
  display: flex;
  padding: 30rpx 30rpx;
  align-items: center;
  justify-content: space-between;
  font-size: 35rpx;
  color: #12333F;
}

.meal-name-text {
  width: 65%;
  /* background-color: red; */
}

.meal-calories {
  text-align: left;
}

.plus {
  width: 50rpx;
  height: 50rpx;
}
