.show-cal-container {
  position: relative;
  width: 100%;
  height: 100px;
  /* background-color: lightsalmon; */
  display: flex;
  /* color: #fff; */
  padding-top: 20px;
}

.title-cal {
  width: 50%;
  color: #12333F;
