/* 呈现表格 */
.intake-table {
  margin-top: 47rpx;
  border: 0px solid darkgray;
  border-radius: 15px;
  color: #12333F;
  font-size: 30rpx;
}
.tr {
  border-radius: 15px;
  display: flex;
  justify-content: center;
  height: 2.8rem;
  align-items: center;
  font-weight: bold;
}
.tr:nth-child(1),
.tr:nth-child(3) 
{
  background-color: #12333F;
  color: #fff;
}
.tr:nth-child(2),
.tr:nth-child(4) 
{
  background-color: #EDF8B8;
  color: #12333F;
}
.td {
    width:50%;
    justify-content: center;
    text-align: center;
}
#meal-name {
  text-align:center;
}

